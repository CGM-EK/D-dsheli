ggplot(data = FTI_og_PFV, aes(x=year))+
  geom_bar(aes(y=pfv*5, color = "Privatforbrugets kvartalvise realvækst"), fill = "darkolivegreen4", stat = "identity", width = 75)+
  geom_line(aes(y=Spg3+sqrt(Spg3[1]^2), color = "Spg 3: Hvordan synes du, den økonomiske situation for Danmark er i dag sammenlignet med for et år siden?"), size = 1.2)+
  scale_y_continuous(
    name = "Nettotal for spg 3 i DST's forbrugertillidsundersøgelse",
    limits = c(-65,35),
    breaks = seq(-60, 30, 10),
    sec.axis = sec_axis(~./5, name ="Realvækst Privatforbrug", breaks = seq(-12, 6, 2))
  ) +scale_color_manual(
    name = "",  # Overskrift for linjerne
    values = c("Spg 3: Hvordan synes du, den økonomiske situation for Danmark er i dag sammenlignet med for et år siden?" = "darkorange", "Privatforbrugets kvartalvise realvækst" = "darkolivegreen4"))+
  theme_minimal()+ labs(title = "Danskernes mening om den samfundsøkonomiske situation følger i høj grad den reale vækst i privatforbruget", caption = "Kilde:https://www.statistikbanken.dk/NKN1\nKilde:https://www.statistikbanken.dk/FORV1")+
  theme(axis.text.x = element_text(angle = 90, vjust = 0.5, hjust = 1), legend.position = "bottom")+
  scale_x_date(name = "Year", breaks = f.tillidsammen$year[seq(1, length(f.tillidsammen$year), by = 4)],
               labels =format(f.tillidsammen$year[seq(1, length(f.tillidsammen$year), by = 4)], "%Y"))+
  geom_hline(yintercept = 0, linetype = "solid", linewidth = 0.1, color = "black")
